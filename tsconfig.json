{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "outDir": "./.tsc",
    "skipLibCheck": true,
    "lib": ["ES2021", "DOM"],
    "strict": true,
    "types": ["vite/client", "vitest/globals"]
  },
  "include": ["lib/**/*", "stories/**/*"],
  "exclude": ["node_modules", "cypress"]
}
