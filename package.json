{
  "name": "ihunt-app",
  "version": "7.0.0",
  "description": "iHunt â€” a clean, self-contained tabletop toolkit build for internal testing.",
  "author": "iHunt maintainers",
  "license": "AGPL-3.0",
  "main": "index.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "ci": "npm install --force && npm run build && npm run validate",
    "start": "vite --open",
    "build": "vite build",
    "i18n": "node -r esm i18n.js",
    "serve:build": "vite preview --port 1234",
    "tsc": "tsc --project tsconfig.json --incremental --noEmit",
    "lint": "eslint 'lib/**' --cache",
    "test": "vitest watch",
    "test:run": "vitest run",
    "test:ui": "vitest watch --ui",
    "int": "npm run build && concurrently \"cypress run\" \"npm run serve:build\" --success first --kill-others --names \"cypress,server\"",
    "int:start": "concurrently \"cypress open\" \"npm run start\" --success first --kill-others --names \"cypress,server\"",
    "tsc-and-lint": "npm run tsc && npm run lint",
    "validate": "npm run tsc && npm run lint && npm run test:run",
    "storybook": "start-storybook -p 6006 --static-dir ./public",
    "build-storybook": "build-storybook --static-dir ./public",
    "clean": "rm -rf node_modules && npm install --force",
    "prepare": "husky install"
  },
  "dependencies": {
    "@dice-roller/rpg-dice-roller": "^5.1.0",
    "@emotion/css": "^11.9.0",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@liveblocks/client": "0.16.15",
    "@liveblocks/react": "0.16.15",
    "@mui/icons-material": "^5.8.4",
    "@mui/lab": "^5.0.0-alpha.93",
    "@mui/material": "^5.9.3",
    "@mui/x-data-grid": "^5.15.0",
    "@sentry/react": "^8.35.0",
    "@tldraw/core": "^1.14.4",
    "@tldraw/tldraw": "^1.25.0",
    "@types/hoist-non-react-statics": "^3.3.5",
    "@types/node": "^22.9.0",
    "canvas-confetti": "^1.9.3",
    "dayjs": "^1.11.13",
    "dompurify": "^3.1.6",
    "i18next": "^23.15.2",
    "i18next-browser-languagedetector": "^8.0.2",
    "i18next-http-backend": "^2.6.1",
    "immer": "^10.1.1",
    "lodash": "^4.17.21",
    "react": "^18.3.1",
    "react-color": "^2.19.3",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-i18next": "^15.0.1",
    "react-router": "^6.28.0",
    "react-router-dom": "^6.28.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^7.6.20",
    "@storybook/addon-essentials": "^7.6.20",
    "@storybook/addon-links": "^7.6.20",
    "@storybook/react": "^7.6.20",
    "@testing-library/react": "^14.2.2",
    "@types/dompurify": "^3.2.0",
    "@types/lodash": "^4.17.15",
    "@types/react": "^18.3.12",
    "@types/react-beautiful-dnd": "^13.1.6",
    "@types/react-color": "^3.0.11",
    "@types/react-dom": "^18.3.1",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "@vitejs/plugin-legacy": "^5.3.2",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/ui": "^2.1.2",
    "concurrently": "^9.0.1",
    "cypress": "^13.15.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "esm": "^3.2.25",
    "fs-extra": "^11.2.0",
    "husky": "^9.1.6",
    "jsdom": "^24.1.3",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "react-test-renderer": "^18.3.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vitest": "^2.1.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache --fix",
    "*.{js,css,md,ts,tsx,json}": "prettier --write"
  }
}
